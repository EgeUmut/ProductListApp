@model ProductListApp.Models.ShoppingList

@{
    ViewData["Title"] = "Add New Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Home/AddNewProducts</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="featured">
    <!-- start slider -->
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <form asp-action="AddNewProducts" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <h2>Products</h2>
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Check</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in ViewBag.AllProducts)
                            {

                                <tr>
                                    <td>
                                        <img src="@Url.Content(product.ImageURL)" width="100" height="100" />
                                    </td>
                                    <td>
                                        @product.Name
                                    </td>
                                    <td>
                                        @product.Category.Name
                                    </td>


                                    @*@foreach (var item in ViewBag.AllProducts)
                                    {*@
                                        <td>
                                        <input type="checkbox" name="SelectedProducts" value="@product.id" @(ViewBag.SelectedProducts.Contains(product.id) ? "checked" : "") />
                                        <label>@product.Name</label>
                                        </td>
                                    @*}*@
                                </tr>

                            }
                        </tbody>
                    </table>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Profile">Back to List</a>
        </div>









    </div>

</section>