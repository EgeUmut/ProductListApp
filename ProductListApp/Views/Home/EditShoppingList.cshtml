@model List<Cart>

@{
    ViewData["Title"] = "EditShoppingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $.noConflict();
        $('#myTable').DataTable();
    });

</script>

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Home/EditShoppingList</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="featured">
    <!-- start slider -->
    <div class="container">


        <form asp-action="EditShoppingList" method="post">
            <!-- Diğer özellikleri buraya ekleyin -->
            <input type="hidden" name="ShoppingListId" value="@ViewBag.ShoppingListId" />

            <h2>List Name: @ViewBag.ListName.Name</h2>
            <hr />
            <h2>List Description:</h2>
            <p>@ViewBag.ListName.Description</p>
            <hr />
            <h2>Products</h2>
            <table id="myTable" class="table table-striped">
                <thead>
                    <tr>
                        <th hidden>id</th>
                        <th hidden>id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>ItemCount</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            
                            <td hidden>
                                <input asp-for="@Model[i].ProductId" type="hidden" class="form-control" />
                            </td>
                            <td hidden>
                                <input asp-for="@Model[i].ShoppingListId" type="hidden" class="form-control" />
                            </td>
                            
                            <td>
                                <img src="@Url.Content(Model[i].product.ImageURL)" width="100" height="100" />
                                @*<input type="hidden" name="@Model[i].product.ImageURL" value="@Model[i].product.ImageURL" />*@
                            </td>
                            <td>
                                @Model[i].product.Name
                            </td>
                            <td>
                                <input asp-for="@Model[i].Description" class="form-control" />
                            </td>
                            <td>
                                <input asp-for="@Model[i].ItemCount" class="form-control" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="/Home/Profile" class="btn btn-secondary">Back to Profile</a>
            </div>
            <br />
        </form>

    </div>

</section>
