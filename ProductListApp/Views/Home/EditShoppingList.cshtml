@model List<ProductListApp.Models.Product>

@{
    ViewData["Title"] = "EditShoppingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Home/EditShoppingList</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="featured">
    <!-- start slider -->
    <div class="container">


        <h1>EditShoppingList</h1>

        <form asp-action="EditShoppingList" method="post">
            <input type="hidden" name="ListId" value="@ViewBag.ShoppingListId" />


            <table class="table">
                <thead>
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Item Count</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(Model[@i].ImageURL)" width="100" height="100" />
                                <input type="hidden" name="Products[@i].ImageURL" value="@Model[i].ImageURL" />
                            </td>
                            <td>
                                @Model[i].Name
                                <input type="hidden" name="Products[@i].Name" value="@Model[i].Name" />
                            </td>
                            <td>
                                @Model[i].Category.Name
                                <input type="hidden" name="Products[@i].Category" value="@Model[i].Category" />
                                <input type="hidden" name="Products[@i].CategoryId" value="@Model[i].Category.id" />
                            </td>
                            <td>
                                <input type="number" name="Products[@i].Id" value="@Model[i].id" hidden />
                                <input type="number" name="Products[@i].ItemCount" value="@Model[i].ItemCount" class="form-control" />
                            </td>
                            <td>
                                <input type="text" name="Products[@i].Description" value="@Html.Raw(Model[i].Description)" class="form-control" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </form>

    </div>

</section>
